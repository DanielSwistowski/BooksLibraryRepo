@model BooksLibrary.Models.RoleViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Utwórz nowe uprawnienie";
}

<h2>Utwórz nowe uprawnienie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nowe uprawnienie</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName)
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>
        <br />
        <p>
            <input type="submit" value="Zapisz" class="button" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Wstecz", "Roles", null, new { @class = "button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
